<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NeuroAppPersistenceUnit">
        <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
        <class>com.slamur.app.neuro.domain.AlgorithmEntity</class>
        <class>com.slamur.app.neuro.domain.NetworkEntity</class>
        <class>com.slamur.app.neuro.domain.ParameterTypeEntity</class>
        <class>com.slamur.app.neuro.domain.QueryEntity</class>
        <class>com.slamur.app.neuro.domain.QueryParamEntity</class>
        <properties>
            <property name="openjpa.RuntimeUnenhancedClasses" value="supported" />
            <property name="openjpa.MetaDataRepository" value="Preload=true" />
            <property name="openjpa.ConnectionURL" value="jdbc:postgresql://localhost:5432/neuroapp"/>
            <property name="openjpa.ConnectionDriverName" value="org.postgresql.Driver"/>
            <property name="openjpa.ConnectionUserName" value="postgres"/>
            <property name="openjpa.ConnectionPassword" value="postgres"/>
            <property name="openjpa.Log" value="DefaultLevel=TRACE, Tool=INFO"/>
        </properties>
    </persistence-unit>
</persistence>
